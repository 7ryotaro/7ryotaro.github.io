boolean mv = false;
var speed =  100;


void setup() {
	size(300, 300);
	frameRate(20);
}


var draw() {

	if(speed > 300){
   		speed = 0;
   	}

	background(255,255,255);

	if(mv){
   		speed = speed + 3;
	}

	strokeWeight(5);
	ellipse(speed,198,30,30);

}


void mousePressed(){
	if(mv){
		mv = false;
	}else{
		mv = true;
	}
}

